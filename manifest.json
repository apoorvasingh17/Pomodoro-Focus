{

  "name": "Pomodoro Focus",
  "description": "Block multiple sites to focus better on your work",
  "background": { 
                    "scripts": ["background.js"]
                },
  "version": "1.0",

  "manifest_version": 2,
  "browser_action": {
    "default_icon" : "icon.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>",
    "http://*/*", "https://*/*"
  ]

  }

