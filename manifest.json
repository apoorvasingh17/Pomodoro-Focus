{

  "name": "Pomodoro Focus",
  "manifest_version": 2,
  "description": "Block multiple sites to focus better on your work",
  "background": {
    "scripts": ["bg.js"]
  },
  "version": "1.0",

  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>","http://*/*",
    "https://*/*"
  ]

}